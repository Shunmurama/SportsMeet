<div class="container">
  <div class="mt-4 ml-3 text-center">
    <h3>カテゴリー編集</h3>
  </div>
  <%= form_with model: @category, url: admin_category_path, method: :patch do |f| %>
    <div class="mt-4">
      <div class="form-group row">
        <label for="categoryName" class="col-form-label col-2">カテゴリー名</label>
        <div class="col-8">
          <%= f.text_field :name, id: "categoryName", class: "form-control" %>
        </div>
      </div>

      <div class="mt-3 text-center">
        <%= f.submit "編集", class: "btn btn-success" %>
        <%= link_to '削除', admin_category_path(@category.id), method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
