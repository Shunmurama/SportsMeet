<div class="container">
 <div class="col-sm-2 mt-4 ml-3 text-center table-secondary">イベント一覧</div>
  <div class="mt-4">
   <%= @events.each do |event| %>

    <div class="mt-2">
     <div class="row mt-2">
      <div>写真</div>
      <div class="ml-2">
        <div class="ml-1 mt-1"><%= event.name %></div>
        <div class="ml-1 mt-1"><%= event.date %></div>
        <div class="ml-1 mt-1"><%= event.number %></div>
        <div class="ml-1 mt-1"><%= event.fee %></div>
        <div class="ml-1 mt-1"><%= event.how_to_pay %></div>
      </div>
     </div>
     <div class="text-center">
       <div class="ml-1 mt-1"><%= event.outline %></div>
       <div class="ml-1 mt-1"><%= event.category_id %></div>
       <div class="ml-1 mt-1"><%= event.prefecture_id %></div>
       <div class="ml-1 mt-1"><%= event.place %></div>
     </div>
    </div>

   <% end %>
  </div>
</div>