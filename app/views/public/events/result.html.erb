<div class="container">
  <div class="mt-5 ml-3 text-center"><h4 class="m-0">検索結果</h4></div>

    <div class="container mt-4">
      <div class="mx-auto col-md-10 mt-2">
        <% if @events.any? %>

        <div class="col-md">
          <div class="container mt-4">
            <!--本日以降開催のイベントを表示-->
            <% @events_run.each do |event| %>
              <%= render "event", event: event %>
            <% end %>

            <% if @events_past.present? %>
              <div class="mt-4 mb-3 text-center"><h4 class="mt-0">過去のイベント</h4></div>
            <% end %>
              <% @events_past.each do |event| %>
                <%= render "event", event: event %>
              <% end %>
          </div>
        </div>

        <% else %>
          <div class="mt-5 ml-3 text-center"><h6>該当するイベントは見つかりませんでした。</h6></div>
        <% end %>
      </div>
    </div>

</div>